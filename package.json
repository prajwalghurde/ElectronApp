{
    "name": "screenshot-app",
    "version": "1.0.0",
    "description": "Electron app for capturing screenshots at intervals",
    "author": "Prajwal",
    "main": "main.js",
    "scripts": {
      "start": "electron .",
      "build": "electron-builder"
    },
    "build": {
      "appId": "com.example.screenshotapp",
      "win": {
        "target": "nsis",
        "icon": "assets/icon.png"
      },
      "mac": {
        "target": "dmg",
        "icon": "assets/icon.png"
      }
    },
    "dependencies": {
      "screenshot-desktop": "^1.15.0",
      "auto-launch": "^5.0.6"
    },
    "devDependencies": {
      "electron": "^28.2.3",
      "electron-builder": "^24.9.1"
    }
  }